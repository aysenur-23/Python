
-----------------------------------------------------------------------------------------
print('Hello World') # komutun tek veya çift tırnak arasında olması sorun teşkil etmez
print("Merhaba Python")

-----------------------------------------------------------------------------------------

print("Buralardan geciyordum \n Seni gördüm vay") # \n ile alt satıra geçiyoruz

 print("Python'a baslamak \t için gec degil")  # \t ile (tab) boşluk bırakıyoruz
 
 -----------------------------------------------------------------------------------------
 
 print("Benim adim {}".format('Aysenur'))
print("Benim adim {}, yasim {}".format('Aysenur',19))

print("Benim adim {0}, yasim {1}".format('Aysenur',19))

print("Benim adim {1}, yasim {0}".format('Aysenur',18))

print("Benim adim {ad}, yasim {yas}".format(ad='Aysenur',yas=19))
print("Benim adim {ad}, yasim {yas}".format(yas=19, ad='Aysenur'))

